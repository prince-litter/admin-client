.login {
  width: 100%;
  height: 100%;
  background-image: url(../images/bg.jpg);
  background-size: 100% 100%;
}
.login .login-header {
  display: flex;
  align-items: center;
  height: 80px;
  background-color: rgba(21, 20, 13, 0.5);
}
.login .login-header img {
  width: 40px;
  margin: 0 15px 0 40px;
}
.login .login-header h1 {
  font-size: 30px;
  color: #fff;
}
.login .login-content {
  margin: 50px auto;
  width: 400px;
  height: 300px;
  padding: 20px 40px;
  background-color: #fff;
}
.login .login-content h2 {
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}
.login .login-content .login-form .login-form-button {
  width: 100%;
}
